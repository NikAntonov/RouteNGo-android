<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:background="@drawable/ripple"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_card_main"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:src="@drawable/caption"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/shortdescription_card_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/name_card_main" />

            <TextView
                android:layout_margin="16dp"
                android:id="@+id/name_card_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="26sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Add to route"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/button3" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>