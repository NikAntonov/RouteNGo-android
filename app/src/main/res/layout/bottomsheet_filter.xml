<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_filter"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="40dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/filter"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <Switch
            android:id="@+id/history_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:text="@string/history"
            android:textColor="@android:color/white" />

        <Switch
            android:id="@+id/shopping_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:text="@string/shopping"
            android:textColor="@android:color/white" />

        <Switch
            android:id="@+id/bar_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:text="@string/bar_marathons"
            android:textColor="@android:color/white" />

        <Switch
            android:id="@+id/nature_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:text="@string/parks_and_nature"
            android:textColor="@android:color/white" />

        <Switch
            android:id="@+id/football_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:text="@string/football"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
